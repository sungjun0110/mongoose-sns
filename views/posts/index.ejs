<%- include('../partials/header') %>
<main>
    <div>
        <% posts.forEach((post) => { %>
            <div class="posts-div">
                <%= post.title %>
                <p><%= post.content %></p>
            </div>

            <div class="comments-div">
                <% post.comments.forEach((comment) => { %>
                    <%= comment.content %>
                <% }); %>
            </div>

            <form id="comment-form" action='/posts/<%= post._id %>/comments' method="POST">
                <label>Comment:</label>
                <input type="text" name="content"></input>
                <button type="submit" value="New Post">Add</button>
            </form>
        <% }); %>
        <a href="/posts/new">Add a New Post</a>
    </div>
</main>

<%- include('../partials/footer') %>